# MongoDB Connection (production)
MONGODB_URI=mongodb://username:password@your-production-db-host:27017/restaurant-app

# JWT Secret for authentication (production - use a strong secret)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-a-very-long-and-random-string

# Server Port
PORT=5000

# Razorpay Keys (for payment processing - production keys)
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret

# CORS Origin (frontend production URL)
FRONTEND_URL=https://your-frontend-production-domain.com